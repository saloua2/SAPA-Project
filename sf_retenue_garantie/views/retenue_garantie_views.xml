<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="retenue_garantie_view_form" model="ir.ui.view">
            <field name="model">sf.retenue.guarantee</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" string="Confirmer" class="oe_highlight"
                                type="object" attrs="{'invisible': ['|', ('active', '=', False), ('state', '!=', 'draft')]}"/>
                        <button name="reset_draft" string="RÃ©initialiser to brouillon" class="oe_highlight"
                                type="object" attrs="{'invisible': ['|', ('active', '=', False), '&amp;', ('state', '!=', 'cancel'), ('state', '!=', 'confirmed')]}"/>
                        <button name="action_cancel" string="Annuler"
                                type="object" attrs="{'invisible': ['|', ('active', '=', False), '&amp;', ('state', '!=', 'draft'), ('state', '!=', 'confirmed')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" attrs="{'invisible':[('name', '=', '/')],
                                'readonly': [('state', '!=', 'draft')]}" placeholder="Draft"/>

                                <span attrs="{'invisible': ['|', ('state', '!=', 'draft')]}">
                                    Draft
                                </span>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="invoice_number"/>
                                <field name="customer_id"/>
                            </group>
                            <group>
                                <field name="amount"/>
                                <field name="due_date"/>
                                <field name="active" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="retenue_garantie_view_list" model="ir.ui.view">
            <field name="model">sf.retenue.guarantee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="invoice_number"/>
                    <field name="customer_id"/>
                    <field name="amount"/>
                    <field name="due_date"/>
                </tree>
            </field>
        </record>

        <record id="retenue_garantie_action" model="ir.actions.act_window">
            <field name="name">Retenue de garantie</field>
            <field name="res_model">sf.retenue.guarantee</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>