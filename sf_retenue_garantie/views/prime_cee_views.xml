<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="prime_cee_view_tree" model="ir.ui.view">
            <field name="model">sf.prime.cee</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false">
                    <field name="name"/>
                    <field name="invoice_number"/>
                    <field name="invoice_date"/>
                    <field name="due_date"/>
                    <field name="customer_id"/>
                    <field name="active" invisible="1"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>
        <record id="prime_cee_view_form" model="ir.ui.view">
            <field name="model">sf.prime.cee</field>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                        <button name="action_confirm" string="Confirmer" class="oe_highlight"
                                type="object"
                                attrs="{'invisible': ['|', ('active', '=', False), ('state', '!=', 'draft')]}"/>
                        <button name="reset_draft" string="Réinitialiser to brouillon" class="oe_highlight"
                                type="object"
                                attrs="{'invisible': ['|', ('active', '=', False), '&amp;', ('state', '!=', 'cancel'), ('state', '!=', 'confirmed')]}"/>
                        <button name="create_invoice" string="Créer une facture" class="oe_highlight"
                                type="object"
                                attrs="{'invisible': ['|', ('active', '=', False), '&amp;', ('state', '!=', 'cancel'), '|', ('state', '!=', 'confirmed'), ('state', '=', 'invoiced')]}"/>
                        <button name="action_cancel" string="Annuler"
                                type="object"
                                attrs="{'invisible': ['|', ('active', '=', False), '&amp;', ('state', '!=', 'draft'), ('state', '!=', 'confirmed')]}"/>
                    </header>
                    <sheet>
                        <!--                        <div class="oe_button_box" name="button_box">-->
                        <!--                            <button name="create_action" string="Add in the 'Print' menu" type="object"-->
                        <!--                                    attrs="{'invisible':[('binding_model_id','!=',False)]}" icon="fa-plus-square"-->
                        <!--                                    help="Display an option on related documents to print this report" class="oe_stat_button"/>-->
                        <!--                        </div>-->
                        <div class="oe_title">
                            <h1>
                                <field name="name" attrs="{'invisible':[('name', '=', '/')],
                                'readonly': [('state', '!=', 'draft')]}" placeholder="Draft"/>

                                <span attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('name', '!=', '/')]}">
                                    Draft
                                </span>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="invoice_number"/>
                                <field name="customer_id"/>
                                <field name="move_id"/>
                                <field name="active" invisible="1"/>
                                <field name="origin_move_id"/>
                            </group>
                            <group>
                                <field name="amount"/>
                                <field name="due_date"/>
                                <field name="invoice_date"/>
                                <field name="account_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="prime_cee_action" model="ir.actions.act_window">
            <field name="name">Prime CEE</field>
            <field name="res_model">sf.prime.cee</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_server_prime_cee_invoice" model="ir.actions.server">
            <field name="name">Créer Facture de débours</field>
            <field name="model_id" ref="model_sf_prime_cee"/>
            <field name="binding_model_id" ref="model_sf_prime_cee"/>
            <field name="state">code</field>
            <field name="code">
                action = records.create_invoice()
            </field>
        </record>


    </data>
</odoo>